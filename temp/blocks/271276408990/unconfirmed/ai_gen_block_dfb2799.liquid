{% doc %}
  @prompt
    a small image in the upper center, subheading text below it, and below that at the bottom a collection button with text on it. Simple white background
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-collection-card__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_width }}px;
    flex-shrink: 0;
  }

  .ai-collection-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-collection-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1;
  }

  .ai-collection-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 100px;
    max-height: 100px;
  }

  .ai-collection-card__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  .ai-collection-card__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
    margin-top: auto;
  }

  .ai-collection-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_text_color }};
  }

  .ai-collection-card__empty-state-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
    font-style: italic;
    margin-top: 8px;
  }
{% endstyle %}

<div
  class="ai-collection-card-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-card__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 400 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-collection-card__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-collection-card__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.subheading != blank %}
    <div class="ai-collection-card__subheading-{{ ai_gen_id }}">
      {{ block.settings.subheading }}
    </div>
  {% endif %}

  {% if block.settings.collection != blank %}
    <a
      href="{{ block.settings.collection.url }}"
      class="ai-collection-card__button-{{ ai_gen_id }}"
    >
      {{ block.settings.button_text }}
    </a>
  {% else %}
    <div class="ai-collection-card__button-{{ ai_gen_id }}" style="pointer-events: none;">
      {{ block.settings.button_text }}
    </div>
    <div class="ai-collection-card__empty-state-{{ ai_gen_id }}">
      Next, select a collection
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection card",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Image width",
      "default": 150
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover our collection</p>"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#040f0f"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Button text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_padding_vertical",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Button vertical padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "button_padding_horizontal",
      "min": 16,
      "max": 48,
      "step": 4,
      "unit": "px",
      "label": "Button horizontal padding",
      "default": 24
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 0
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#248232"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#165858"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 20,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Spacing between elements",
      "default": 20
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Collection card"
    }
  ]
}
{% endschema %}
